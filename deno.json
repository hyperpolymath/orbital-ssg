{
  "name": "@hyperpolymath/orbital-ssg",
  "version": "0.2.0",
  "exports": {
    ".": "./mod.js",
    "./adapters/*": "./adapters/*.js"
  },
  "tasks": {
    "test": "deno test --allow-run --allow-read tests/",
    "test:cov": "deno test --allow-run --allow-read --coverage=coverage/ tests/",
    "test:e2e": "deno test --allow-run --allow-read --allow-net tests/integration/",
    "lint": "deno lint adapters/ tests/",
    "fmt": "deno fmt adapters/ tests/",
    "check": "deno check adapters/*.js",
    "docs": "deno doc adapters/*.js --html --output=docs/api/"
  },
  "lint": {
    "include": ["adapters/", "tests/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo", "no-console"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["adapters/", "tests/"]
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  }
}
